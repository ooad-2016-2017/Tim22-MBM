<Page
    x:Class="SarajevoGO_.DodavanjeSupervizora"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SarajevoGO_"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <Image x:ConnectionId='1' x:Name="image" HorizontalAlignment="Left" Height="44" Margin="73,0,0,0" VerticalAlignment="Top" Width="236" Source="Assets/logo.png"/>
        <TextBlock x:ConnectionId='2' x:Name="textBlock" HorizontalAlignment="Left" Margin="100,65,0,0" TextWrapping="Wrap" Text="ADD SUPERVISOR" VerticalAlignment="Top" Foreground="#FF2D6EE0" FontWeight="Bold" FontSize="18" RenderTransformOrigin="0.738,0.398"/>
        <Button x:ConnectionId='3' x:Name="button1" Content="" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Height="33" Width="45">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/backbutton.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='4' x:Name="button" Content="Confirm" HorizontalAlignment="Left" Margin="120,570,0,0" VerticalAlignment="Top" Width="130" Background="#FF4343C9" Foreground="#FFFDF4F4" Height="40"/>
        <TextBox x:ConnectionId='5' x:Name="textBox" HorizontalAlignment="Left" Height="20" Margin="73,260,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="210"/>
        <TextBox x:ConnectionId='6' x:Name="textBox1" HorizontalAlignment="Left" Height="20" Margin="73,320,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="210"/>
        <ComboBox x:ConnectionId='7' x:Name="comboBox" HorizontalAlignment="Left" Height="20" Margin="73,380,0,0" VerticalAlignment="Top" Width="210" Background="#FFC9C5C5" RenderTransformOrigin="0.5,0.5"/>
        
        <Image x:ConnectionId='8' x:Name="back_png" Margin="15,0,0,271" Source="res/back.png" Stretch="Fill" RenderTransformOrigin="0.111,-0.125" HorizontalAlignment="Left" Width="45" Height="40" VerticalAlignment="Bottom"/>
    </Grid>
</Page>

