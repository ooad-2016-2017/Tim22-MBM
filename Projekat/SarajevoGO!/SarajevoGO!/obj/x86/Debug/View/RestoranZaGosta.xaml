        <TextBlock x:ConnectionId='5' x:Name="label1" Text="Food and Drinks" HorizontalAlignment="Left" Margin="15,220,0,0" VerticalAlignment="Top" Width="173" Foreground="White"/>
        <TextBlock x:ConnectionId='6' x:Name="label2" Text="Adress" HorizontalAlignment="Left" Margin="50,310,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.539,-0.865" Width="60" FontSize="16" Height="30"/>
