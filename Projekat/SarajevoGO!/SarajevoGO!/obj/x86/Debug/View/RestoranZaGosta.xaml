        </Button>

        <Button x:ConnectionId='15' x:Name="buttonrez" Content="" HorizontalAlignment="Left" Margin="5,393,0,0" VerticalAlignment="Top" Height="33" Width="45"                                         >
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/menu.png"/>
            </Button.Background>
        </Button>

        <Button x:ConnectionId='16' x:Name="buttoninfo" Content="" HorizontalAlignment="Left" Margin="5,420,0,0" VerticalAlignment="Top" Height="33" Width="45">
