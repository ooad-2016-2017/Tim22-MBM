        <TextBlock x:ConnectionId='9' x:Name="label5" Text="Menu" HorizontalAlignment="Left" Margin="50,400,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock x:ConnectionId='10' x:Name="label6" Text="Info" HorizontalAlignment="Left" Margin="50,430,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Image x:ConnectionId='11' x:Name="image1" Height="120" Margin="0,49,0,0" VerticalAlignment="Top"/>
      

        <Button x:ConnectionId='12' x:Name="buttonadresa" Content="" HorizontalAlignment="Left" Margin="5,305,0,0" VerticalAlignment="Top" Height="33" Width="45"                                           >
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/adresa.png"/>
            </Button.Background>
        </Button>
        
        <Button x:ConnectionId='13' x:Name="buttophone" Content="" HorizontalAlignment="Left" Margin="5,333,0,0" VerticalAlignment="Top" Height="33" Width="45"                                        >
            <Button.Background>
