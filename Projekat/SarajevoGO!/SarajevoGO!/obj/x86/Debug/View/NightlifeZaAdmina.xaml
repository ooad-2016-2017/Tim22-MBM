<Page
    x:Class="SarajevoGO_.NightlifeZaAdmina"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SarajevoGO_"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:ConnectionId='1' x:Name="image" HorizontalAlignment="Left" Height="44" Margin="73,0,0,0" VerticalAlignment="Top" Width="236" Source="ms-appx:///Assets/logo.png"/>
        <Image x:ConnectionId='2' x:Name="image1" Height="120" Margin="0,49,0,0" VerticalAlignment="Top"/>
        <Button x:ConnectionId='3' x:Name="button1" Content="" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Height="33" Width="45">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/backbutton.png"/>
            </Button.Background>
        </Button>
        
        <Button x:ConnectionId='4' x:Name="buttonAdd" Content="Add picture" Foreground="White" HorizontalAlignment="Left" Margin="232,248,0,0" VerticalAlignment="Top" Height="40" Width="136" Background="CornflowerBlue" FontSize="20"/>
        <RelativePanel HorizontalAlignment="Left" Height="466" Margin="0,174,0,0" VerticalAlignment="Top" Width="360" Background="#FF00A3CC">
            <TextBox x:ConnectionId='8' x:Name="textBoxNameNight" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="340" Margin="10,10,0,0"/>
            <TextBlock x:ConnectionId='9' x:Name="label1" Text="Nightlife" HorizontalAlignment="Left" Margin="15,50,0,0" VerticalAlignment="Top" Width="173" Foreground="White"/>
            <TextBlock x:ConnectionId='10' x:Name="label2" Text="Reservations" HorizontalAlignment="Left" Margin="15,245,0,0" VerticalAlignment="Top" Width="173" Foreground="White"/>
            <TextBox x:ConnectionId='11' x:Name="textBoxPhone" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Text="Phone" VerticalAlignment="Top" Width="340" RenderTransformOrigin="0.728,4.802" Margin="10,150,0,0"/>
            <TextBox x:ConnectionId='12' x:Name="textBoxAdress" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" Text="Adress" VerticalAlignment="Top" Width="340" Margin="10,100,0,0"/>
            <TextBox x:ConnectionId='13' x:Name="textBoxNameWeb" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" Text="Web" VerticalAlignment="Top" Width="340" Margin="10,200,0,0"/>
            <TextBox x:ConnectionId='14' x:Name="textBoxInfo" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="Info" VerticalAlignment="Top" Width="340" Margin="10,280,0,0"                                      />
        </RelativePanel>
        <Button x:ConnectionId='5' x:Name="buttonadd" Content="Add Image" HorizontalAlignment="Left" Margin="235,135,0,0" VerticalAlignment="Top" Width="110" Height="35" Background="#FF4343C9" Foreground="White"/>
        <Button x:ConnectionId='6' x:Name="buttonsave" Content="Save changes" HorizontalAlignment="Left" Margin="35,570,0,0" VerticalAlignment="Top" Width="110" Height="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" Background="#FF4343C9" Foreground="#FFFFFDFD"/>
        <Button x:ConnectionId='7' x:Name="buttoncancel" Content="Cancel&#xD;&#xA;" HorizontalAlignment="Left" Margin="225,570,0,0" VerticalAlignment="Top" Width="110" Height="35" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Center" Background="#FF4343C9" Foreground="White" RenderTransformOrigin="0.57,0.527" FontSize="14"/>

    </Grid>
</Page>

