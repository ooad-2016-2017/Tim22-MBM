        </Button>
        <Button x:ConnectionId='7' x:Name="buttonCreate" Content="" HorizontalAlignment="Left" Margin="237,570,0,0" VerticalAlignment="Top" Height="70" Width="123"                                            >
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/createplacebutton.png"/>
